extends layouts/layout_header_title
block vars
    - var title='Мой профиль'
block content
    form.lc.bill-form.lc_edit
        h3 Редактирование личного профиля
        label
            span Имя
            input(type="text",value='Иван',placeholder="Ваше имя")
        label
            span Фамилия
            input(type="text",value='Иванов',placeholder="Ваша фамилия")
        label
            span Отчество
            input(type="text",value='Иванович',placeholder="Ваше отчество")
        label
            span Дата рождения
            input(type="text",value='01.01.1980',placeholder="Ваша дата рождения")
        label
            span E-mail
            input(type="email",value='email@email.com',placeholder="Ваш e-mail")
        label
            span Телефон
            input(type="tel",value='+7 900 000 00 00',placeholder="Ваш номер телефона телефон")
        label
            span Skype
            input(type="text",value='Lognskype',placeholder="Ваш skype")
        label
            span Адрес
            input(type="text",value='Старан, Город, улица, дом',placeholder="Ваш адрес")
        button.btn(type="submit") Сохранить профиль
        .text-center
            a(href='') Отменить редактирование