extends layouts/layout_header_title
block vars
    - var title='Оплата'
block content
    //.page-title.page-title--first Сформировать квитанцию
    .container.bill.pay
        .course-item
            .course-item__img(style="background-image:url('assets/i/291828877.jpg')")
            .course-item__content
                .course-item__title Наименование курса обучения
                .course-item__description Краткое описание данного курса обучения длиной до 3-х строк
                .course-item__info
                    .course-item__duration 150 часов
                    .course-item__price 7500 <i class="fa fa-rub"></i>
        h3.m-b-8.text-center Сформировать квитанцию
        form.bill-form
            label
                span ФИО*
                input(type="text")
            label
                span E-mail*
                input(type="email")
            label
                span Телефон*
                input(type="tel")
            label
                span Адрес
                input(type="text")
            label
                span Комментарии
                textarea
            a(href='') Оплачивая услугу, Вы соглашаетесь с условиями договора оферты.
            button(type="submit")  Сформировать квитанцию
